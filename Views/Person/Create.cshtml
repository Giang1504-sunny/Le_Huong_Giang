@model DeMoMVC.Models.Person



@{
    ViewData["Title"] = "Create Person";
}

<h2>Create New Person</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="PersonID" class="control-label"></label>
        <input type="text" name="PersonID" class="form-control" 
               value="@ViewBag.NewPersonID" readonly />
        <span asp-validation-for="PersonID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FullName" class="control-label"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address" class="control-label"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
